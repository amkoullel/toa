<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="imageAcquisition" name="image acquisition" schema="schema/imageAcquisition.exsd"/>
   <extension-point id="imageAnalysis" name="image analysis" schema="schema/imageAnalysis.exsd"/>
   <extension-point id="imagePublish" name="image publish" schema="schema/imagePublish.exsd"/>
   <extension-point id="imageReasoning" name="image reasoning" schema="schema/imageReasoning.exsd"/>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="systemVideo.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="systemvideo.actions.SystemVideo"
               tooltip="Hello, Eclipse world"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="systemvideo.actions.SystemVideo">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="systemvideo.PreferencePage"
            id="systemVideo.page1"
            name="systemVideo">
      </page>
   </extension>

</plugin>
